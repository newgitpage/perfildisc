/* ===============================
   Estilo geral baseado no modelo
   https://newgitpage.github.io/disc-teste-habitacao/
   =============================== */
body {
    font-family: 'Arial', sans-serif;
    background-color: #f5f5f5;
    color: #333;
    margin: 0;
    padding: 0;
}

.container {
    max-width: 900px;
    margin: 30px auto;
    padding: 20px 30px;
    background-color: #fff;
    border-radius: 8px;
    box-shadow: 0 0 15px rgba(0,0,0,0.1);
}

h1, h2 {
    text-align: center;
    color: #1f4e79;
    margin-bottom: 20px;
}

h2 {
    margin-top: 30px;
}

button {
    background-color: #1f4e79;
    color: #fff;
    border: none;
    padding: 10px 20px;
    margin: 5px;
    cursor: pointer;
    border-radius: 5px;
    font-size: 1em;
}

button:hover {
    background-color: #145a96;
}

.progress {
    text-align: right;
    margin-bottom: 15px;
    font-weight: bold;
}

.question {
    font-size: 1.2em;
    margin-bottom: 15px;
}

.answers {
    display: flex;
    flex-direction: column;
    margin-bottom: 20px;
}

.answers label {
    margin-bottom: 10px;
    cursor: pointer;
}

#resultSection {
    display: none;
    margin-top: 20px;
}

.card-container {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-around;
}

.card {
    background-color: #e9f1f8;
    border-radius: 8px;
    width: 250px;
    padding: 15px;
    margin: 10px;
    box-shadow: 0 0 8px rgba(0,0,0,0.1);
}

.card h3 {
    margin-top: 0;
    color: #1f4e79;
}

.card p {
    font-size: 0.95em;
}
